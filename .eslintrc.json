{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-inner-declarations": "off",
        "no-fallthrough": "off",
        "prefer-rest-params": "off",
        "no-explicit-any": {
            "ignoreRestArgs": true
        }
    }
}